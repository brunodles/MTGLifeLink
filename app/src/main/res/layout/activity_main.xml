<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context="com.brunodles.mtglifelink.MainActivity">

    <fragment
        android:id="@+id/player1"
        android:name="com.brunodles.mtglifelink.LifeCounterFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_lifecounter"
        />

    <fragment
        android:id="@+id/menu"
        android:name="com.brunodles.mtglifelink.MenuFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_menu"/>


    <fragment
        android:id="@+id/player2"
        android:name="com.brunodles.mtglifelink.LifeCounterFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_lifecounter"
        />


</LinearLayout>
